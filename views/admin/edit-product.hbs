<section class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Edit Product</h2>
            {{#with product}}
                <form
                    action="/admin/edit-product/{{_id}}"
                    method="post"
                    enctype="multipart/form-data"
                >

                    <label for="product">Product Name</label>
                    <input class="form-control" type="text" name="product" value={{product}} />
                    <label for="category">Category</label>
                    <input class="form-control" type="text" name="category" value={{category}} />

                    <label for="price">Price</label>
                    <input class="form-control" type="text" name="price" value={{price}} />

                    <label for="description">Description</label>
                    <input
                        class="form-control"
                        type="text"
                        name="description"
                        value={{description}}
                    />

                    <label for="image">Image</label>
                    <img src="/product-images/{{_id}}.jpg" style="width:100px" alt="" />
                    <input class="form-control" type="file" name="image" value={{image}} />

                    <input class="btn btn-primary mt-3" type="submit" />

                </form>
            {{/with}}
        </div>
    </div>
</section>